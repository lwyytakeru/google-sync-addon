{
    // Useful links:
    // https://code.visualstudio.com/docs/editor/tasks
    // https://code.visualstudio.com/docs/editor/variables-reference

    "version": "2.0.0",
    "presentation": {
        "revealProblems": "onProblem"
    },
    "tasks": [
        {
            "label": "buildOta",
            "detail": "$(tools) Build the flashable OTA zip.",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "windows": {
                "command": "${workspaceFolder}\\build.bat"
            },
            "options": {
                "env": {
                    "OPENSOURCE_ONLY": "false"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "buildOtaOSS",
            "detail": "$(tools) Build the flashable OTA zip (open-source components only).",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "windows": {
                "command": "${workspaceFolder}\\build.bat"
            },
            "options": {
                "env": {
                    "OPENSOURCE_ONLY": "true"
                }
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "label": "installTest",
            "detail": "Emulate an Android recovery on your PC and inside it execute the flashable zip to see the result.",
            "type": "shell",
            "command": "${workspaceFolder}/recovery-simulator/recovery.sh",
            "windows": {
                "command": "${workspaceFolder}\\recovery-simulator\\recovery.bat"
            },
            "args": [
                "${workspaceFolder}/output/*.zip"
            ],
            "options": {
                "env": {
                    "LIVE_SETUP_ALLOWED": "false",
                    "BB_GLOBBING": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "dummy (do not use)",
            "detail": " ",
            "type": "java (build)",
            "paths": [
                "${workspace}"
            ],
            "isFullBuild": true,
            "presentation": {
                "panel": "dedicated"
            },
        }
    ]
}
